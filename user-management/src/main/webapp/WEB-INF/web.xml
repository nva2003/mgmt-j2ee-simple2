<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	      version="3.0">
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/project-name/user-management</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <resource-ref>
        <res-ref-name>mail/MailSession</res-ref-name>
        <res-type>javax.mail.Session</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>

    <session-config>
        <session-timeout>120</session-timeout>
    </session-config>

    <context-param>
        <param-name>log4jExposeWebAppRoot</param-name>
        <param-value>false</param-value>
    </context-param>

    <context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>user-management</param-value>
    </context-param>

    <context-param>
        <description>version of user-management</description>
        <param-name>version</param-name>
        <param-value>1.0</param-value>
    </context-param>


    <env-entry>
        <env-entry-name>pathToHomeLog</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>${audit.logs.path}/${server.name}/user-management</env-entry-value>
    </env-entry>

    <env-entry>
        <env-entry-name>rollingSize</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>50MB</env-entry-value>
    </env-entry>

    <env-entry>
        <description>smtp from sending</description>
        <env-entry-name>mailFrom</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>no-reply@gvc.rzd</env-entry-value>
    </env-entry>

</web-app>
